<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.agendacontactos">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name=".vista.ModificarborrarRecordatorioActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".vista.VisualizarRecordatorioActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".vista.AniadirRecordatorioActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".vista.ModificarborrarNotaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".vista.AniadirnotaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".vista.VisualizarNotaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".vista.ModificarborrarContactoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".vista.VisualizarContactoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".vista.AniadirContactoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".vista.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".vista.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>